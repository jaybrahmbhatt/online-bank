mixin storeForm (bank = {} )
    form(action="/cheque",method="POST",class="card" enctype= "multipart/form-data")
        label(for="amount") Amount You would like to Deposit
        input(type="number", name="amount" required)
        input(type="email" name= "email" value=user.email hidden)
        label(for="description") Description
        input(type="text")(name="description" required)
        label(for="photo") Photo
            input(type="file" name="photo" id="photo" accept="image/png, image/jpeg" required)
            if bank.photo 
                img(src=`/uploads/${bank.photo}`, alt=bank.name width= 200)
        input.button(type="submit" value="Submit")
